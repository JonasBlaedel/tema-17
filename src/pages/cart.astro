<style>
  section#cart {
    min-height: 50vh;
    height: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--l-spacing);
    margin: var(--magn);
  }

  #cart h2 {
    text-transform: uppercase;
    text-align: center;
    margin-bottom: var(--m-spacing);
  }
  #arrow-text {
    display: flex;
    align-items: center;
    gap: var(--xs-spacing);
  }

  .navigation {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: var(--magn);
    padding-block: var(--xs-spacing);
    width: 100%;
    background-color: var(--p-white);
    box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
  }

  .nav-right {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    gap: var(--m-spacing);
  }

  #burger {
    background: transparent;
    border: none;
    min-width: 44px;
    min-height: 44px;
    cursor: pointer;
    z-index: 2;
  }

  .hamburger {
    width: 1.8em;
    height: 3px;
    background: var(--p-black);
    margin-top: 8px;
    position: relative;
    display: block;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    width: 1.8em;
    height: 3px;
    background: var(--p-black);
    transition: transform 0.3s cubic-bezier(0, 0.01, 0.24, 1);
  }

  .hamburger::before {
    top: -8px;
  }

  .hamburger::after {
    bottom: -8px;
  }

  .pressed .hamburger {
    transform: rotate(-45deg);
    margin-bottom: var(--xs-spacing);
  }

  .pressed .hamburger::before {
    transform: rotate(90deg) translate(8px, 11px);
  }
  .pressed .hamburger::after {
    transform: rotate(90deg) translate(-8px, 11px);
  }

  #menu-logo {
    max-width: 100%;
    max-height: 60px;
    display: block;
  }

  #menuLinks {
    display: none;
    position: fixed;
    top: 0%;
    right: 0;
    width: 80%;
    height: 100%;
    background-color: var(--p-white);
    padding: var(--l-spacing);
    box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
    z-index: 1;
  }

  #menuLinks a {
    font-size: var(--h2-font-size);
  }

  #menuLinks.shown {
    display: flex;
    flex-direction: column;
    justify-content: end;
    align-items: end;
    height: 100vh;
    gap: var(--l-spacing);
    padding-bottom: 8rem;
  }

  @media (min-width: 800px) {
    section#cart {
      min-height: 50vh;
      margin: var(--desk-magn);
    }

    #menuLinks a {
      font-size: var(--p-font-size);
    }

    #menuLinks {
      display: flex;
      background-color: transparent;
      gap: var(--xl-spacing);
      justify-content: flex-end;
      position: relative;
      padding: var(--xs-spacing);
      box-shadow: none;
    }

    button#burger {
      display: none;
    }
    .navigation {
      padding-inline: var(--desk-magn);
      padding-block: var(--s-spacing);
      gap: var(--l-spacing);
    }
  }
</style>

<script>
  const btnCart = document.querySelector("#burger");
  const menuCart = document.querySelector("#menuLinks");

  function toggleMenuCart() {
    menuCart.classList.toggle("shown");
    btnCart.classList.toggle("pressed");

    const menuShown = menuCart.classList.contains("shown");
    if (menuShown) {
      document.body.style.overflowY = "hidden";
    } else {
      document.body.style.overflowY = "auto";
    }
  }

  btnCart.addEventListener("click", toggleMenuCart);
</script>
