const { header, subheader, filter, background, justify, gap, link } = Astro.props;
---

<script>
  let slideIndex = 0; // Start at the first slide

  function moveSlide(n) {
    const slides = document.querySelectorAll(".slider-item");
    const container = document.querySelector(".horizontal-sliderx");

    if (!slides.length) return;

    const slideWidth = (slides[0] as HTMLElement).offsetWidth + parseInt(getComputedStyle(slides[0] as HTMLElement).marginRight);

    slideIndex += n;

    // Boundary checks
    if (slideIndex >= slides.length) {
      slideIndex = 0; // Loop back to the first slide
    } else if (slideIndex < 0) {
      slideIndex = slides.length - 1; // Loop back to the last slide
    }

    container.scrollLeft = slideIndex * slideWidth;
  }
</script>

<section class="sectionContainer" id={link}>
  <div class="heading-slider">
    <p>{subheader}</p>
    <h2>{header}</h2>
  </div>
  <section class="horizontal-slider-container">
    <button onclick="moveSlide(-1); ">Previous</button>
    <button onclick="moveSlide(1);">Next</button>
    <div class=`horizontal-slider ${justify}`>
      {
        data.map((product) => {
          if (product.type === `${filter}`) {
            return (
              <a href="" class="slider-item">
                <img src={`/img/${product.img}`} alt={product.title} />
                <div class={`${background} ${gap}`}>
                  <p class="product_title">{product.title}</p>
                  <p class="product_subtitle">{product.subtitle}</p>
                </div>
              </a>
            );
          }
        })
      }
    </div>
  </section>
</section>

