---
import "../style.css";
---

<section id="footer">
  <div id="footer-upper">
    <img src="../../logo/logo-tumletid.png" alt="Tumletid Logo" />
    <ul id="footerLinks">
      <li>
        <a href=""> bObles.dk</a>
      </li>
      <li><a href="/about">Om os</a></li>
      <li><a href="/products">Produkter</a></li>
      <li><a href="/">Tumletider</a></li>
    </ul>
  </div>
  <hr />
  <div id="footer-lower">
    <div id="socials">
      <img src="../../icons/facebook.svg" alt="" />
      <img src="./../icons/insta.svg" alt="" />
      <img src="./../icons/facebook.svg" alt="" />
    </div>
    <div id="copyright">
      <p>bObles @ 2024. All rights reserved.</p>
    </div>
  </div>
</section>

<style>
  #footer {
    padding: var(--m-spacing);
    background-color: var(--s-blue);
  }

  section #footer-upper img {
    max-height: 80px;
    filter: invert(1);
  }

  #footer-upper {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--l-spacing) var(--s-spacing);
    gap: var(--l-spacing);
  }
  #footer-lower {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--l-spacing);
    gap: var(--l-spacing);
  }

  #footerLinks {
    color: var(--p-white);
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-around;
  }
  #socials {
    color: var(--p-white);
    display: flex;
    flex-direction: row;
    gap: var(--xl-spacing);
  }
  #copyright {
    color: var(--p-white);
  }

  @media (min-width: 800px) {
    #footer {
      padding: var(--xl-spacing);
    }

    section #footer-upper img {
      max-height: 60px;
    }

    #footer-upper {
      flex-direction: row;
      align-items: center;
      padding: var(--xs-spacing) 0;
      gap: 0;
    }
    #footer-lower {
      display: flex;
      flex-direction: row-reverse;
      align-items: center;
      justify-content: space-between;
      padding: var(--m-spacing) 0;
      gap: var(--l-spacing);
    }

    #footerLinks {
      justify-content: end;
      gap: var(--xl-spacing);
    }
  }
</style>
